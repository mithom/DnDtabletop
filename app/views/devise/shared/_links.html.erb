<div class="row">
  <%- if controller_name != 'sessions' %>
    <%- if controller_name != 'registrations' %>
      <div class="col s4 center-align">
        <%= link_to "Log in", new_session_path(resource_name), class: "devise_links" %>
      </div>
    <% else %>
      <div class="col s6 center-align">
        <%= link_to "Log in", new_session_path(resource_name), class: "devise_links" %>
      </div>
    <% end -%>
  <% end -%>


  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="col s4 center-align">
      <%= link_to "Register an account", new_registration_path(resource_name), class: "devise_links" %>
    </div>
  <% end -%>


  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="col s4 center-align">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "devise_links" %>
    </div>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%- if controller_name != 'registrations' %>
      <div class="col s4 center-align">
        <%= link_to "resend confirmation mail", new_confirmation_path(resource_name), class: "devise_links" %>
      </div>
    <% else %>
      <div class="col s6 center-align">
        <%= link_to "resend confirmation mail", new_confirmation_path(resource_name), class: "devise_links" %>
      </div>
    <% end -%>
  <% end -%>
</div>