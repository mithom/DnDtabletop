<p>
  <strong>Name:</strong>
  <%= @character.name %>
</p>

<p>
  <strong>Lvl / class:</strong>
  <br>
  <% class_lvl_strings(@character).each do |lvl_String| %>
    <p> <%= lvl_String %>
  <% end %>
  <br>
  <table>
    <tbody>
      <tr>
        <td>strength</td>
        <td><%= @character.strength %></td>
        <td><%= Character.modifier(@character.strength) %></td>
      </tr>
      <tr>
        <td>dexterity</td>
        <td><%= @character.dexterity %></td>
        <td><%= Character.modifier(@character.dexterity) %></td>
      </tr>
      <tr>
        <td>constitution</td>
        <td><%= @character.constitution %></td>
        <td><%= Character.modifier(@character.constitution) %></td>
      </tr>
      <tr>
        <td>intelligence</td>
        <td><%= @character.intelligence %></td>
        <td><%= Character.modifier(@character.intelligence) %></td>
      </tr>
      <tr>
        <td>wisdom</td>
        <td><%= @character.wisdom %></td>
        <td><%= Character.modifier(@character.wisdom) %></td>
      </tr>
      <tr>
        <td>charisma</td>
        <td><%= @character.charisma %></td>
        <td><%= Character.modifier(@character.charisma) %></td>
      </tr>
      <tr>
        <td>attack bonus</td>
        <td colspan="2"><%= @character.attack_bonus %></td>
      </tr>
      <tr>
        <td>speed</td>
        <td colspan="2"><%= @character.speed %></td>
      </tr>
      <tr>
        <td>can carry?</td>
        <td colspan="2"><%= ! @character.encumberred? %></td>
      </tr>
    </tbody>
  </table>
</p>

<%= link_to 'Back', characters_path %>